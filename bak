<script setup>
  import { ref, onMounted } from "vue";
  import { useRouter } from "vue-router";
  import api from "../../services/api"; // Pastikan import ini ada

  const router = useRouter();
  const isSidebarOpen = ref(false);
  const currentUser = ref("Pengguna");

  // 1. STATE BARU: Untuk menampung data dari database
  const riwayatAntrean = ref([]);

  // State Form
  const form = ref({
    poliTujuan: "",
    namaPasien: "", // Opsional jika backend otomatis pakai token
    noHp: "",
    catatan: "",
  });

  // 2. FUNGSI BARU: Ambil data dari Backend
  const fetchRiwayat = async () => {
    try {
      const response = await api.get("/queue"); // Request ke backend
      riwayatAntrean.value = response.data; // Simpan hasil ke state
    } catch (error) {
      console.error("Gagal ambil riwayat:", error);
    }
  };

  onMounted(() => {
    const savedUser = localStorage.getItem("username");
    if (savedUser) currentUser.value = savedUser;

    // 3. PANGGIL SAAT HALAMAN DIBUKA
    fetchRiwayat();
  });

  const handleSubmit = async () => {
    if (!form.value.poliTujuan) {
      alert("Harap pilih Poli Tujuan!");
      return;
    }
    try {
      const response = await api.post("/queue", {
        poli: form.value.poliTujuan,
      });
      alert(
        `âœ… Pendaftaran Berhasil!\nNomor Antrean: ${response.data.nomorAntrean}`
      );

      // Reset Form & Update List otomatis
      form.value.poliTujuan = "";
      fetchRiwayat(); // <--- Refresh daftar antrean setelah daftar
    } catch (error) {
      console.error(error);
      alert("Gagal mendaftar. Pastikan Anda sudah login.");
    }
  };

  // Fungsi sidebar bawaan template (jangan dihapus)
  const toggleSidebar = () => {
    isSidebarOpen.value = !isSidebarOpen.value;
  };
  const closeSidebar = () => {
    if (window.innerWidth < 1024) isSidebarOpen.value = false;
  };
  const handleLogout = () => {
    if (confirm("Apakah anda yakin ingin keluar?")) {
      localStorage.removeItem("username");
      localStorage.removeItem("token");
      router.push("/");
    }
  };
</script>

